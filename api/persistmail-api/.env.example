# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=PersistMail API

# CORS Settings (comma-separated list in production)
CORS_ORIGINS_STR=*

# Database Settings
DATABASE_URL=sqlite:///./persistmail.db

# Email Settings
DEFAULT_HOURS_RETENTION=24
DEFAULT_EMAIL_LIMIT=25
MAX_EMAIL_LIMIT=50

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Legacy Mail Server Settings (for backward compatibility)
MAIL_DOMAIN=example.com
IMAP_HOST=imap.example.com
IMAP_PORT=993
SMTP_HOST=smtp.example.com
SMTP_PORT=465
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password
IMAP_SECRET=your-secure-shared-password
IS_PREMIUM_DOMAIN=false

# Mailcow Integration Settings
MAILCOW_API_URL=https://mail.example.com/api/v1
MAILCOW_API_KEY=your_mailcow_api_key_here
MAILCOW_ENABLED=true
MAILCOW_DEFAULT_QUOTA_MB=50
MAILCOW_MAX_QUOTA_MB=100

# Mailbox Lifecycle Settings
DEFAULT_MAILBOX_EXPIRY_HOURS=24
MAX_MAILBOX_EXPIRY_HOURS=168
CLEANUP_INTERVAL_MINUTES=60
